<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManagerDashboardController">
    <top>
        <HBox alignment="CENTER">
         <StackPane prefHeight="36.0" prefWidth="70.0">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Manager Name: Bob&#10;Manager ID: 12345">
                  <font>
                     <Font size="10.0" />
                  </font>
                  <StackPane.margin>
                     <Insets left="5.0" />
                  </StackPane.margin>
               </Text>
            </children>
         </StackPane>
             <Text text="              Employees              ">
            <font>
               <Font size="24.0" />
            </font>
         </Text>
             <Button fx:id="logoutButton" alignment="CENTER" onAction="#logout" prefHeight="50.0" prefWidth="73.0" text="Logout" textAlignment="CENTER">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin>
         </Button>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="ordersButton" onAction="#ordersButtonClicked" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Orders" />
                <Button fx:id="employeesButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Employees" />
                <Button fx:id="inventoryButton" onAction="#inventoryButtonClicked" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Inventory" />
                <Button fx:id="revenueButton" onAction="#revenueButtonClicked" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Revenue" />
            </children>
         <padding>
            <Insets top="10.0" />
         </padding>
        </HBox>
    </center>
</BorderPane>
